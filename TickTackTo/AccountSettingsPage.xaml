<Window x:Class="TickTackTo.AccountSettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickTackTo"
        mc:Ignorable="d"
        Title="AccountSettingsPage" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Change Username" FontSize="16" Margin="5"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="5"/>
            <Button Content="Update Username" Click="UpdateUsername_Click" Margin="5" Width="207"/>

            <TextBlock Text="Change Password" FontSize="16" Margin="5"/>
            <PasswordBox x:Name="NewPasswordBox" Width="200" Margin="5"/>
            <Button Content="Update Password" Click="UpdatePassword_Click" Margin="5" Width="202"/>
        </StackPanel>
    </Grid>
</Window>
