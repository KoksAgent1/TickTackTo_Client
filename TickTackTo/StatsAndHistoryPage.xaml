<Window x:Class="TickTackTo.StatsAndHistoryPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TickTackTo"
        mc:Ignorable="d"
        Title="Benutzer Stats" Height="500" Width="380">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock x:Name="WinsText" FontSize="16" Margin="5"/>
            <TextBlock x:Name="LossesText" FontSize="16" Margin="5"/>
            <TextBlock x:Name="DrawsText" FontSize="16" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="HistoryDataGrid" AutoGenerateColumns="True" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
